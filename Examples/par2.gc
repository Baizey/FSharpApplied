begin
    i, n: int,
    procedure fac(n: int, res: ^int) = { 
        tmp: int;
        if 
            n=0 -> res^ := 1
            | true -> 
                fac(n-1, &tmp);
                res^ := tmp * n
            
        fi
    };
    i := 0;
    do  
        i < 5 -> 
            fac(i, &n);
            print n;
            i := i + 1
    od
end
